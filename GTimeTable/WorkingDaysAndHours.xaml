                <Button Content="Add" HorizontalAlignment="Left" Margin="663.4,344,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" RenderTransformOrigin="1.247,0.331"/>
                <DataGrid HorizontalAlignment="Left" Height="100" Margin="10,416,0,0" VerticalAlignment="Top" Width="433" Grid.ColumnSpan="2" Background="White">
                    <DataGrid.Effect>
                        <DropShadowEffect Color="#FFF7F7F7"/>
                    </DataGrid.Effect>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Number" Width="250"/>
                        <DataGridTextColumn Header="Action"/>
                    </DataGrid.Columns>

                </DataGrid>
                <DataGrid HorizontalAlignment="Left" Height="100" Margin="317.4,416,0,0" VerticalAlignment="Top" Width="421" Background="White" Grid.Column="1">
                    <DataGrid.Effect>
                        <DropShadowEffect Color="#FFF7F7F7"/>
                    </DataGrid.Effect>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Number" Width="250"/>
                        <DataGridTextColumn Header="Action"/>
                    </DataGrid.Columns>

                </DataGrid>
                <ComboBox  HorizontalAlignment="Left" Margin="170,348,0,0" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Content="Monday"/>
                    <ComboBoxItem Content="Tuesday"/>
                    <ComboBoxItem Content="Wednesday"/>
                    <ComboBoxItem Content="Thursday"/>
                    <ComboBoxItem Content="Friday"/>
                    <ComboBoxItem Content="Saturday"/>
                    <ComboBoxItem Content="Friday"/>
